{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ],
      "env": [
        "NEXT_PUBLIC_*",
        "HEDERA_ECDSA_PRIVATE_KEY",
        "HEDERA_ED25519_PRIVATE_KEY_DER",
        "HEDERA_ED25519_PRIVATE_KEY_HEX"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env",
        ".env.local"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}